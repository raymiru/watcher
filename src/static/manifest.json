{
  "description": "B2BETS Extension",
  "version": "1.0",
  "name": "B2BETS Extension",

  "content_scripts": [
    {
      "matches": [
        "https://bets.net/*",
        "https://betsdota2.com/*",
        "https://betscsgo.com/*",
        "https://steamcommunity.com/*",
        "https://bets.pro/*",
        "https://betsdota2.gg/*",
        "https://betscsgo.gg/*"

      ],
      "js": [
        "main.js"
      ]
    }
  ],
  "background": {
  "scripts": [
    "background.js"
  ]
},
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon-34.png"
  },
  "icons": {
    "128": "icons/icon-128.png"
  },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'; "
}
